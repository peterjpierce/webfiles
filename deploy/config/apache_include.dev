##
# /webfiles and /usr/local/nrtc/wsgi_apps/webfiles
# Use the Apache Include directive to integrate this into the virtual host config file
#

WSGIDaemonProcess wfdev processes=3 python-path=/home/ppierce/git/webfiles/app:/home/ppierce/pyenv/wfil/lib/python3.4/site-packages

Alias /webfiles/static/ /home/ppierce/git/webfiles/app/static/
<Directory /home/ppierce/git/webfiles/app/static/>
  Order allow,deny
  Allow from all
</Directory>

WSGIScriptAlias /webfiles /home/ppierce/git/webfiles/app/apache/wsgi.py
<Directory /home/ppierce/git/webfiles/app/apache>
  WSGIProcessGroup wfdev
  WSGIApplicationGroup %{GLOBAL}
  <Files wsgi.py>
    Order deny,allow
    Allow from all
  </Files>
</Directory>
